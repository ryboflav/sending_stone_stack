# Copy this file to `.env` and fill in your OpenRouter credentials.
OPENROUTER_API_KEY=sk-your-key
OPENROUTER_MODEL=openrouter/auto
# Optional metadata to help OpenRouter analytics:
# OPENROUTER_REFERRER=https://your-app-url
# OPENROUTER_APP_TITLE=Speaking Stone Edge
# Override the system prompt file (defaults to speaking_stone_edge/system_prompt.txt):
# SYSTEM_PROMPT_PATH=/workspaces/speaking-stone-stack/speaking_stone_edge/system_prompt.txt

# Piper TTS configuration (download a voice .onnx + .onnx.json from https://github.com/rhasspy/piper/releases)
# PIPER_MODEL_PATH=/workspaces/speaking-stone-stack/tests/data/tts/en_US-amy-low.onnx
# PIPER_CONFIG_PATH=/workspaces/speaking-stone-stack/tests/data/tts/en_US-amy-low.onnx.json
# PIPER_SPEAKER_ID=0
# PIPER_USE_CUDA=false
